all: systhreadsDyn.so

clean:
	rm -f regions.o shared.o lintree.o

shared.o: shared.cc lintree.h thread.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c shared.cc

lintree.o: lintree.cc lintree.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c lintree.cc

thread.o: thread.cc thread.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c thread.cc


systhreadsDyn.so: thread.o shared.o lintree.o
	@CXX@ @LDFLAGS@ @SHOBJ_LDFLAGS@ -o systhreadsDyn.so $^

install: systhreadsDyn.so
@INSTALLATION@
.PHONY: all clean install
