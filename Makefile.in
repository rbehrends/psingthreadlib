all: singthreads.so

clean:
	rm -f regions.o shared.o lintree.o

regions.o: regions.cc regions.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c regions.cc

shared.o: shared.cc shared.h lintree.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c shared.cc

lintree.o: lintree.cc lintree.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c lintree.cc


singthreads.so: regions.o shared.o lintree.o
	@CXX@ @LDFLAGS@ @SHOBJ_LDFLAGS@ -o singthreads.so $^

install: singthreads.so
@INSTALLATION@
.PHONY: all clean install
