OBJ=thread.o shared.o lintree.o
all: systhreads.so

clean:
	rm -f $(OBJ)

shared.o: shared.cc lintree.h thread.h singthreads.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c shared.cc

lintree.o: lintree.cc lintree.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c lintree.cc

thread.o: thread.cc thread.h singthreads.h
	@CXX@ @CXXFLAGS@ @SING_INCLUDES@ @SHOBJ_CFLAGS@ -c thread.cc

basictest.o: basictest.cc singthreads.h thread.h $(OBJ)
	@CXX@ @CXXFLAGS@ -c basictest.cc $(OBJ)

systhreads.so: $(OBJ)
	@CXX@ @LDFLAGS@ @SHOBJ_LDFLAGS@ -o systhreads.so $^

install: systhreads.so
@INSTALLATION@
.PHONY: all clean install
